<resources>
    <!-- Base application theme. -->
    <style name="Theme.TMinusTasker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cool_blue</item>
        <item name="colorPrimaryVariant">@color/cool_blue_darker</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- TODO: I am not certain this is necessary. -->
        <item name="windowActionBar">false</item>
        <!-- TODO: I am not certain this is necessary. -->
        <item name="windowNoTitle">true</item>
        <item name="divider">@color/medium_gray</item>
        <!-- TODO: use the Material background instead. I am using this workaround atm because the "normal" solution made animations for button clicks on the bottom nav bar look bad. -->
        <item name="colorBackgroundWorkaround">@color/dark_gray</item>
        <item name="colorOnBackground">@color/white</item>
    </style>
</resources>